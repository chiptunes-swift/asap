#include <windows.h>
#include "..\asap.h"
#include "settings.h"

IDD_SETTINGS DIALOG 0, 0, 144, 82
#ifdef WINAMP
STYLE DS_3DLOOK | DS_CENTER | DS_MODALFRAME | WS_POPUPWINDOW
CAPTION "ASAP Settings"
#endif
#ifdef FOOBAR2000
STYLE WS_CHILD
#endif
FONT 8, "MS Sans Serif"
{
	GROUPBOX "Song length", IDC_STATIC, 8, 4, 128, 50
	RADIOBUTTON "Unlimited", IDC_UNLIMITED, 16, 16, 44, 12, BS_RADIOBUTTON | WS_TABSTOP | WS_GROUP
	RADIOBUTTON "Limited to", IDC_LIMITED, 16, 32, 44, 12
	EDITTEXT IDC_LIMIT, 64, 32, 28, 12
	LTEXT "seconds", IDC_STATIC, 96, 34, 36, 12
#ifdef WINAMP
	DEFPUSHBUTTON "OK", IDOK, 16, 62, 50, 14
	PUSHBUTTON "Cancel", IDCANCEL, 76, 62, 50, 14
#endif
}

1 VERSIONINFO
	FILEVERSION ASAP_VERSION_MAJOR, ASAP_VERSION_MINOR, ASAP_VERSION_MICRO, 0
