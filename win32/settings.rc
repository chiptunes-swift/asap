{
	BLOCK "StringFileInfo"
	{
		BLOCK "040904b0"
		{
			VALUE "CompanyName", "ASAP Developers\0"
#ifdef WINAMP
			VALUE "FileDescription", "ASAP Winamp plugin\0"
#endif
#ifdef FOOBAR2000
			VALUE "FileDescription", "ASAP foobar2000 0.9 plugin\0"
#endif
			VALUE "FileVersion", ASAP_VERSION "\0"
#ifdef WINAMP
			VALUE "InternalName", "in_asap\0"
#endif
#ifdef FOOBAR2000
			VALUE "InternalName", "foo_asap\0"
#endif
			VALUE "LegalCopyright", "Copyleft " ASAP_YEARS "\0"
#ifdef WINAMP
			VALUE "OriginalFilename", "in_asap.dll\0"
#endif
#ifdef FOOBAR2000
			VALUE "OriginalFilename", "foo_asap.dll\0"
#endif
			VALUE "ProductName", "ASAP\0"
			VALUE "ProductVersion", ASAP_VERSION "\0"
		}
	}
	BLOCK "VarFileInfo"
	{
		VALUE "Translation", 0x409, 1200
	}
}
